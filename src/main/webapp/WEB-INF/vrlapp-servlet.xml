<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean name="xmlViewResolver" class="org.springframework.web.servlet.view.XmlViewResolver">
        <property name="order" value="1"/>
    </bean>

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="order" value="2"/>
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <bean id="methodNameResolver" class="org.springframework.web.servlet.mvc.multiaction.ParameterMethodNameResolver">
        <property name="paramName" value="action"/>
    </bean>

    <!-- The main controller beans follow -->

    <bean name="/about.html" class="org.auscope.vrl.web.AboutController"/>

    <bean name="/login.html" class="org.auscope.vrl.web.LoginController">
        <property name="gridAccess" ref="gridAccess"/>
    </bean>

    <bean name="/myproxylogin.html" class="org.auscope.vrl.web.MyProxyLoginController">
        <property name="gridAccess" ref="gridAccess"/>
    </bean>

    <bean name="/gridsubmit.html" class="org.auscope.vrl.web.GridSubmitController">
        <property name="gridAccess" ref="gridAccess"/>
        <property name="jobManager" ref="vrlJobManager"/>
        <property name="methodNameResolver" ref="methodNameResolver"/>
    </bean>

    <bean name="/joblist.html" class="org.auscope.vrl.web.JobListController">
        <property name="gridAccess" ref="gridAccess"/>
        <property name="jobManager" ref="vrlJobManager"/>
        <property name="methodNameResolver" ref="methodNameResolver"/>
    </bean>

    <bean name="/scriptbuilder.html" class="org.auscope.vrl.web.ScriptBuilderController">
        <property name="methodNameResolver" ref="methodNameResolver"/>
    </bean>

    <bean name="/access_error.html" class="org.auscope.vrl.web.AccessErrorController">
        <property name="mailSender" ref="mailSender"/>
    </bean>

</beans>

