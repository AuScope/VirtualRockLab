{
  xtype: "form",
  id: "SimContainerForm",
  nclass: SimContainerNode,
  bodyStyle: "padding:5px;",
  labelWidth: 130,
  //labelAlign: "top",
  items: [{
    xtype: "fieldset",
    collapsible: false,
    title: "Main Settings",
    anchor: "100%",
    autoHeight: true,
    defaults: { anchor: "100%" },
    items: [{
      xtype: "textfield",
      name: "scriptName",
      value: "particle_script",
      fieldLabel: "Script Name",
      allowBlank: false,
      minLength: 3,
      maskRe: /[^\W]/
    }, {
      xtype: "combo",
      editable: false,
      forceSelection: true,
      mode: 'local',
      triggerAction: 'all',
      fieldLabel: "Particle Type",
      name: "particleType",
      store: ['NRotSphere', 'RotSphere'],
      value: 'NRotSphere'
    }, {
      xtype: "numberfield",
      name: "numTimesteps",
      value: "1000",
      fieldLabel: "Number of Timesteps",
      allowBlank: false,
      allowNegative: false,
      allowDecimals: false
    }, {
      xtype: "numberfield",
      name: "timeIncrement",
      value: "0.0001",
      anchor: "100%",
      fieldLabel: "Timestep Increment",
      decimalPrecision: 6,
      allowBlank: false
    }, {
      xtype: "radiogroup",
      fieldLabel: "Constrain to 2D",
      items: [
        { boxLabel: 'No', name: 'constrain2D', inputValue: 0, checked: true },
        { boxLabel: 'Yes', name: 'constrain2D', inputValue: 1 }
      ]
    }]
  }, {
    xtype: "fieldset",
    collapsible: false,
    title: "Direction of Periodic Boundaries",
    autoHeight: true,
    anchor: "100%",
    layout: "fit",
    items: [{
      xtype: "radiogroup",
      hideLabel: true,
      columns: [ .4, .2, .2, .2 ],
      items: [{
        name: "periodic",
        boxLabel: "No periodic BCs",
        inputValue: "0",
        checked: true
      }, { name: "periodic", boxLabel: "X", inputValue: "1" },
         { name: "periodic", boxLabel: 'Y', inputValue: "2" },
         { name: "periodic", boxLabel: 'Z', inputValue: "3" }
      ]
    }]
  }, {
    xtype: "fieldset",
    collapsible: false,
    title: "MPI Subdomain Decomposition",
    autoHeight: true,
    anchor: "100%",
    items: [{
      xtype: "numberfield",
      name: "subdivX",
      value: "1",
      anchor: "100%",
      fieldLabel: "Subdivisions in X",
      allowDecimals: false,
      allowNegative: false,
      allowBlank: false
    }, {
      xtype: "numberfield",
      name: "subdivY",
      value: "1",
      anchor: "100%",
      fieldLabel: "Subdivisions in Y",
      allowDecimals: false,
      allowNegative: false,
      allowBlank: false
    }, {
      xtype: "numberfield",
      name: "subdivZ",
      value: "1",
      anchor: "100%",
      fieldLabel: "Subdivisions in Z",
      allowDecimals: false,
      allowNegative: false,
      allowBlank: false
    }]
  }, {
    xtype: "fieldset",
    collapsible: false,
    title: "Verlet List Contact Detection",
    autoHeight: true,
    anchor: "100%",
    items: [{
      xtype: "numberfield",
      name: "gridSpacing",
      value: "2.5",
      anchor: "100%",
      fieldLabel: "Linked Cell Grid Spacing",
      decimalPrecision: 6,
      allowBlank: false
    }, {
      xtype: "numberfield",
      name: "verletDist",
      value: "0.2",
      anchor: "100%",
      fieldLabel: "Verlet List Update Distance",
      decimalPrecision: 6,
      allowBlank: false
    }]
  }]
}

